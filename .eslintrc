{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "eqeqeq": 1,
        "quotes": [1, "single"],
        "no-unreachable": 2,
        "no-cond-assign": 1,
        "no-multi-spaces": 1,
        "no-trailing-spaces": 1,
        "no-unused-vars": [1, { "vars": "all", "args": "all" }],
        "no-restricted-imports": [
            "error",
            {
                "paths": ["lodash"]
            }
        ]
    }
}
